<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed, checked: false %>
  <%= f.submit %>
<% end %>

<p><%= link_to 'Home', tasks_path, class: 'btn btn-light' %></p>
